<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FamilyTogether.App.Pages.AboutPage"
             Title="Acerca de FamilyTogether"
             BackgroundColor="#F8F9FA">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">

            <!-- Header Card -->
            <Frame BackgroundColor="White" CornerRadius="12" HasShadow="True" Padding="0">
                <StackLayout Padding="30,25" Spacing="15">
                    <Label
                        Text="👨‍👩‍👧‍👦"
                        FontSize="60"
                        HorizontalOptions="Center" />
                    
                    <Label
                        Text="FamilyTogether"
                        FontSize="28"
                        FontAttributes="Bold"
                        TextColor="#2C3E50"
                        HorizontalOptions="Center" />
                    
                    <Label
                        Text="Versión 1.0.0"
                        FontSize="16"
                        TextColor="#7F8C8D"
                        HorizontalOptions="Center" />
                    
                    <Label
                        Text="Mantén a tu familia conectada y segura con seguimiento de ubicación inteligente y optimizado para batería"
                        FontSize="14"
                        TextColor="#95A5A6"
                        HorizontalOptions="Center" />
                    
                    <Label
                        Text="Desarrollado con ❤️ usando .NET MAUI"
                        FontSize="12"
                        TextColor="#7F8C8D"
                        HorizontalOptions="Center"
                        Margin="0,10,0,0" />
                </StackLayout>
            </Frame>

            <!-- Contact Card -->
            <Frame BackgroundColor="White" CornerRadius="12" HasShadow="True" Padding="0">
                <StackLayout Padding="25,20" Spacing="15">
                    <Label
                        Text="📧 Contacto y Soporte"
                        FontSize="18"
                        FontAttributes="Bold"
                        TextColor="#3498DB" />
                    
                    <Button
                        Text="soporte@familytogether.app"
                        FontSize="14"
                        BackgroundColor="Transparent"
                        TextColor="#3498DB"
                        BorderColor="#3498DB"
                        BorderWidth="1"
                        CornerRadius="8"
                        HeightRequest="45"
                        Clicked="OnContactEmailClicked"
                        HorizontalOptions="Fill">
                        <Button.Shadow>
                            <Shadow Brush="#3498DB" Opacity="0.2" Radius="4" Offset="0,2" />
                        </Button.Shadow>
                    </Button>
                    
                    <Label
                        Text="Toca para enviar un correo con tus comentarios o reportar problemas"
                        FontSize="12"
                        TextColor="#7F8C8D"
                        HorizontalOptions="Center" />
                </StackLayout>
            </Frame>

            <!-- Features Card -->
            <Frame BackgroundColor="White" CornerRadius="12" HasShadow="True" Padding="0">
                <StackLayout Padding="25,20" Spacing="15">
                    <Label
                        Text="✨ Características Principales"
                        FontSize="18"
                        FontAttributes="Bold"
                        TextColor="#27AE60" />
                    
                    <StackLayout Spacing="8">
                        <Label Text="📍 Seguimiento de ubicación en tiempo real" FontSize="13" TextColor="#2C3E50" />
                        <Label Text="🔋 Optimización inteligente de batería" FontSize="13" TextColor="#2C3E50" />
                        <Label Text="🏠 Geofencing para reducir consumo GPS" FontSize="13" TextColor="#2C3E50" />
                        <Label Text="👥 Gestión fácil de grupos familiares" FontSize="13" TextColor="#2C3E50" />
                        <Label Text="🔐 Autenticación segura con JWT" FontSize="13" TextColor="#2C3E50" />
                        <Label Text="🗺️ Mapas interactivos con Mapsui" FontSize="13" TextColor="#2C3E50" />
                    </StackLayout>
                </StackLayout>
            </Frame>

            <!-- Donation Card -->
            <Frame BackgroundColor="White" CornerRadius="12" HasShadow="True" Padding="0">
                <StackLayout Padding="25,20" Spacing="15">
                    <Label
                        Text="☕ Apoya el Desarrollo"
                        FontSize="18"
                        FontAttributes="Bold"
                        TextColor="#E67E22" />
                    
                    <Button
                        Text="Ko-fi.com - Invítame un café ☕"
                        FontSize="14"
                        BackgroundColor="#E67E22"
                        TextColor="White"
                        CornerRadius="8"
                        HeightRequest="45"
                        Clicked="OnDonationClicked"
                        HorizontalOptions="Fill">
                        <Button.Shadow>
                            <Shadow Brush="#E67E22" Opacity="0.3" Radius="8" Offset="0,4" />
                        </Button.Shadow>
                    </Button>
                    
                    <Label
                        Text="Tu apoyo ayuda a mantener la app gratuita y añadir nuevas características"
                        FontSize="12"
                        TextColor="#7F8C8D"
                        HorizontalOptions="Center" />
                </StackLayout>
            </Frame>

            <!-- Privacy & Legal Card -->
            <Frame BackgroundColor="White" CornerRadius="12" HasShadow="True" Padding="0">
                <StackLayout Padding="25,20" Spacing="15">
                    <Label
                        Text="🔒 Privacidad y Seguridad"
                        FontSize="18"
                        FontAttributes="Bold"
                        TextColor="#E74C3C" />
                    
                    <Frame BackgroundColor="#FDF2F2" CornerRadius="8" Padding="15" HasShadow="False">
                        <StackLayout Spacing="10">
                            <Label
                                Text="FamilyTogether respeta tu privacidad. Tus datos de ubicación solo se comparten con los miembros de tu familia que hayas autorizado."
                                FontSize="13"
                                LineHeight="1.4"
                                TextColor="#2C3E50" />
                            
                            <Label
                                Text="Los datos se almacenan de forma segura y nunca se comparten con terceros. Puedes eliminar tu cuenta y todos tus datos en cualquier momento."
                                FontSize="13"
                                LineHeight="1.4"
                                TextColor="#2C3E50" />
                            
                            <Frame BackgroundColor="#E74C3C" CornerRadius="6" Padding="12" HasShadow="False">
                                <Label
                                    Text="🔐 Tus datos están seguros y bajo tu control"
                                    FontSize="13"
                                    FontAttributes="Bold"
                                    LineHeight="1.4"
                                    TextColor="White"
                                    HorizontalOptions="Center" />
                            </Frame>
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </Frame>

            <!-- Technology Card -->
            <Frame BackgroundColor="White" CornerRadius="12" HasShadow="True" Padding="0">
                <StackLayout Padding="25,20" Spacing="15">
                    <Label
                        Text="🛠️ Tecnología"
                        FontSize="18"
                        FontAttributes="Bold"
                        TextColor="#9B59B6" />
                    
                    <StackLayout Spacing="8">
                        <Label Text="📱 .NET MAUI - Framework multiplataforma" FontSize="13" TextColor="#2C3E50" />
                        <Label Text="⚡ Azure Functions - Backend serverless" FontSize="13" TextColor="#2C3E50" />
                        <Label Text="🗺️ Mapsui - Mapas interactivos" FontSize="13" TextColor="#2C3E50" />
                        <Label Text="🔐 JWT - Autenticación segura" FontSize="13" TextColor="#2C3E50" />
                        <Label Text="📄 JSON - Almacenamiento local" FontSize="13" TextColor="#2C3E50" />
                    </StackLayout>
                </StackLayout>
            </Frame>

            <!-- Back Button -->
            <Button
                Text="← Volver"
                FontSize="16"
                FontAttributes="Bold"
                BackgroundColor="#3498DB"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="50"
                Clicked="OnBackClicked"
                HorizontalOptions="Fill"
                Margin="0,10,0,20">
                <Button.Shadow>
                    <Shadow Brush="#3498DB" Opacity="0.3" Radius="8" Offset="0,4" />
                </Button.Shadow>
            </Button>

        </StackLayout>
    </ScrollView>
</ContentPage>